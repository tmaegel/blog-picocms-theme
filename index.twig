    <header class="w3-container w3-center">
      <h1 id="page-title" class="w3-xxlarge w3-padding-32 w3-text-gray">{{ meta.title }}</h1>
    </header>

    <main class="w3-container w3-center">
      <div id="content">
        {{ content }}
      </div>

      <div>
        {% for social in pages["_meta"].meta.social %}
          <a class="w3-margin w3-text-gray w3-hover-text-dark-gray" href="{{ social.url }}" title="{{ social.title }}" role="button">
            <span>
              <svg class="icon icon-{{ social.icon }}" aria-hidden="true">
                <use xlink:href="#icon-{{ social.icon }}"></use>
              </svg>
            </span>
          </a>
        {% endfor %}
      </div>
    </main>

    <footer>
      <div class="w3-bottom">
        <div class="bar w3-bar w3-dark-gray">
          <a class="padding-16 w3-bar-item w3-button w3-hover-dark-grey w3-text-white" href="{{ base_url }}">
            {{ site_title }}
          </a>
          {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
            <a class="padding-16 w3-bar-item w3-button w3-hover-dark-grey w3-topbar {% if page.url in current_page.url %} w3-text-white w3-border-white {% else %} w3-border-dark-gray w3-text-light-grey {% endif %}" href="{{ page.url }}">
              {{ page.title }}
            </a>
          {% endfor %}
        </div>
      </div>
    </footer>

  </body>
</html>
